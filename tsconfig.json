{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
